#!/bin/bash
SERVER="10.135.72.251"

n=1000000
if [ -n "$1" ]; then
    n="$1"
fi

URL="http://$SERVER:808$1/acquire?key=girl.id"
IGNORE_LEADER_PARAM="&ignoreleader=true"

i=0;
while [ $i -lt $n ]; do
    for url in `cat urls`; do
	echo
	date
	echo "$url"
	curl "$url"
	ab -n 1000 -c 10 -k -l "$url$IGNORE_LEADER_PARAM"
    done
    echo "================"
    let i=i+1
    sleep 60 
done
